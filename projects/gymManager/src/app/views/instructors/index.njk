{% extends "layout.njk" %}
{% block content %}
    <div class="card table-container">
        <div class="header">
            <form action="/instructors" method="GET" >
                <input 
                    type="text"
                    name="filter"
                    placeholder="Consulte por nome ou atendimento"
                    value={{filter}}
                >
                <button type="submit">Filtrar</button>
            </form>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Atendimento</th> 
                    <th id="students">Alunos</th> 
                    <th>Ação</th> 
                </tr>
            </thead>
            <tbody>
                {%for instructor in instructors%}
                <tr>
                    <td>
                    <span style="background-image: url({{instructor.avatar_url}})"></span>
                    {{instructor.name}}</td>
                    <td>
                        {{ instructor.services }}
                    </td>
                    <td class="students">
                        {{ instructor.total_students }}
                    </td>
                    <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
                </tr>
                {%endfor%}
            </tbody>
            <a href="/instructors/create" class="newInstructor">Novo Instrutor</a>
        </table>
        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>    
    </div>
{% endblock content %}